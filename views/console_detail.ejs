<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title><%= console.name %></title>
        <script src="/javascripts/password.js" defer></script>
        <script src="/javascripts/controlAside.js" defer></script>
        <link rel="stylesheet" href="/stylesheets/style.css" />
    </head>
    <body>
        <aside>
            <button class="close-aside">&Cross;</button>
            <a href="/games">Games</a>
            <a href="/consoles">Consoles</a>
            <a href="/accessories">Accessories</a>
        </aside>
        <main>
            <button class="hamburger">&#9776;</button>
            <div class="details">
                <h1>ID: <%= console._id %></h1>
                <p>Name: <%= console.name %></p>
                <p>Price: <%= console.price %></p>
                <p>Quantity: <%= console.quantity %></p>
                <p>Manufacturer: <%= console.manufacturer %></p>
                <% if (availableGames.length>0) {%>
                <p>Games available for this console:</p>
                <ul>
                    <% availableGames.forEach(game => { %>
                    <li><%=game.name%></li>
                    <% }) %>
                </ul>
                <% } %> <% if (availableAccessories.length>0) {%>
                <p>Accessories available for this console:</p>
                <ul>
                    <% availableAccessories.forEach(accessory => { %>
                    <li><%=accessory.name%></li>
                    <% }) %>
                </ul>
                <% } %>
                <img
                    src="/images/<%= console.imageName %>"
                    alt="<%= console.name %>"
                />
                <div class="buttons">
                    <a href="<%= console.url %>/update">Update console</a>
                    <button class="confirm">Delete Console</button>
                </div>
                <div style="visibility: hidden" class="modal">
                    <form action="<%= console.url %>/delete" method="post">
                        <button type="button" class="close-modal">
                            &Cross;
                        </button>
                        <label for="pwd">Introduce password</label>
                        <input type="password" id="pwd" />
                        <p></p>
                        <button>Confirm</button>
                    </form>
                </div>
            </div>
        </main>
    </body>
</html>
