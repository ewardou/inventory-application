<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Add new accessory</title>
        <script src="/javascripts/password.js" defer></script>
        <script src="/javascripts/controlAside.js" defer></script>
        <link rel="stylesheet" href="/stylesheets/style.css" />
    </head>
    <body>
        <aside>
            <button class="close-aside">&Cross;</button>
            <a href="/games">Games</a>
            <a href="/consoles">Consoles</a>
            <a href="/accessories">Accessories</a>
        </aside>
        <main>
            <button class="hamburger">&#9776;</button>
            <h1>Add new accessory to the listing</h1>
            <form
                action=""
                method="post"
                id="form"
                enctype="multipart/form-data"
            >
                <p>
                    <label for="name">Accessory name: </label>
                    <input type="text" id="name" name="name" required
                    minlength="1" maxlength="100" value="<%= accessory ?
                    accessory.name : ""%>" />
                </p>
                <p>
                    <label for="price">Price: </label>
                    <input type="number" id="price" name="price" required
                    min="1" value="<%= accessory ? accessory.price : ""%>"/>
                </p>
                <p>
                    <label for="quantity">Quantity: </label>
                    <input type="number" id="quantity" name="quantity" required
                    min="1" max="1000" value="<%= accessory ? accessory.quantity
                    : ""%>" />
                </p>
                <fieldset>
                    <legend>Available platforms</legend>
                    <% consoles.forEach(console=>{%>
                    <p>
                        <input type="checkbox" id="<%= console._id %>"
                        value="<%= console._id %>" name="availableConsoles" <%=
                        console.checked ? "checked" : "" %> />
                        <label for="<%= console._id %>"
                            ><%= console.name %></label
                        >
                    </p>
                    <% }) %>
                </fieldset>
                <p>
                    <label for="image">Article's image: </label>
                    <input
                        type="file"
                        id="image"
                        name="article-image"
                        accept="image/*"
                    />
                </p>
                <% if (errors) { errors.forEach(error=>{%>
                <p><%= error.msg %></p>
                <% })} %> <% if(!update) {%>
                <button type="submit">Submit</button>
                <% } %>
            </form>
            <% if (update) {%>
            <p>
                <button class="confirm" style="margin: 0 auto; display: block">
                    Submit
                </button>
            </p>
            <div style="visibility: hidden" class="modal">
                <button type="button" class="close-modal">&Cross;</button>
                <label for="pwd">Introduce password</label>
                <input type="password" id="pwd" />
                <p></p>
                <button form="form">Confirm</button>
            </div>
            <% } %>
        </main>
    </body>
</html>
