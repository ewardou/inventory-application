<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Games</title>
    </head>
    <body>
        <h1><%= title %></h1>
        <% allGames.forEach(item=>{ %>
        <p>Name: <%= item.name %></p>
        <p>Price: <%= item.price %></p>
        <p>Quantity: <%= item.quantity %></p>
        <% if (item.synopsis) { %>
        <p>Synopsis: <%= item.synopsis %></p>
        <% } %>
        <ul>
            <% item.availableConsoles.forEach(console => { %>
            <li><%=console.name%></li>
            <% }) %>
        </ul>
        <% }) %>
    </body>
</html>
